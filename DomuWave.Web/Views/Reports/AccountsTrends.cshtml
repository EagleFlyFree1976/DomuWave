@page
@model AccountsTrendsModel
@{
    ViewData["Title"] = "Account Trends";
}

<h1>Andamento conti</h1>

<div class="controls mb-3">
    <label for="accountSelect">Account</label>
    <select id="accountSelect" class="form-select d-inline-block w-auto"></select>

    <label for="monthsSelect" class="ms-3">Mesi</label>
    <select id="monthsSelect" class="form-select d-inline-block w-auto">
        <option value="6">6</option>
        <option value="12" selected>12</option>
        <option value="24">24</option>
    </select>

    <button id="prevBtn" class="btn btn-secondary ms-3">◀ Prev</button>
    <button id="nextBtn" class="btn btn-secondary">Next ▶</button>
</div>

<div class="d-flex gap-3 flex-wrap">
    <div style="flex:1 1 600px;">
        <h5>Saldo</h5>
        <canvas id="balanceChart" height="200"></canvas>
    </div>
    <div style="flex:1 1 600px;">
        <h5>Entrate / Uscite</h5>
        <canvas id="flowChart" height="200"></canvas>
    </div>
</div>

@section Scripts {  
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/accounts-trends.js"></script>
}