{
    "http_ports": "60101",

    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Debug",
            "Hangfire": "Information"
        }
    },
    "DomuWave": {
        "ExchangeRateApyKey": "2e1df6f26bed88afae18212b",
        "ExchangeRateApiUrl": "https://v6.exchangerate-api.com/v6",
        "DefaultCurrencyCode": "EUR",
        "CacheTimeouts": {
            "Currency": 5,
            "Tag": 5

        }
    },
    "HealthChecksUI": {},
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File",

            "Serilog.Exceptions"
        ],

        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Hangfire": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp:o}] |{Level:u4}| #{ThreadId} [{Application} - {MachineName}] {SourceContext} {Message}{NewLine}{Exception}"

                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": ".\\..\\..\\..\\Logs\\auth.log",
                    "outputTemplate": "[{Timestamp:o}] |{Level:u4}| #{ThreadId} [{Application} - {MachineName}] {SourceContext} {Message}{NewLine}{Exception}"
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithThreadId", "WithExceptionDetails" ],
        "Destructure": [
            {
                "Name": "ToMaximumDepth",
                "Args": { "maximumDestructuringDepth": 4 }
            },
            {
                "Name": "ToMaximumStringLength",
                "Args": { "maximumStringLength": 100 }
            },
            {
                "Name": "ToMaximumCollectionCount",
                "Args": { "maximumCollectionCount": 10 }
            }
        ],
        "Properties": {
            "Application": "DomuWaveApp",
            "tag": "DomuWaveApp"
        }
    },
    "JobSettings": {
        "JobServer": {
            "ServerKey": "DomuWave",
            "SchemaName": "DomuWave",
            "UserName": "root",
            "Pwd": "root4ever!",
            "Queue": [ "critical", "default" ],
            "IamJobServer": true,
            "ProlongExpirationDay": 365,

            "QueueDbConnectionString": "Server=eaglefly;Database=DomuWave;User Id=Cashflow;Password=XiBw$2aun.J!2vt;TrustServerCertificate=true"
        },
        "Jobs": []
    },
    "OxCore": {
        "Microservices": { "authorization-base-uri": "http://localhost:60103" },
        "UseAuthIntegration": true,
        "CacheAuthExpireMinute": 20,
        "CorsAllowedUri": "*",
        "AddInPluginFolder": null,
        "ConsumerKeyUrl": "/api/DomuWave",
        "AppDomainName": "DomuWave_App",
        "TraceRequest": true,
        "TemplatePrefix": "omx_",

        "SignalR": {
            "Start": false,
            "MaxRetries": 20,
            "DelayInSecondToRetry": 15,
            "Hubs": []
        },
        "Nh": {
            "Factories": [
                {
                    "Key": "DomuWave",
                    "IsDefault": true,
                    "ConfigurationPath": "/config/sessionfactory-DomuWave.cfg.xml",
                    "ConnectionStringName": "sql-DomuWave",
                    "FluentlyAssembly": [ "DomuWave.Services", "CPQ.Core" ],
                    "HbmAssembly": [ "DomuWave.Services", "CPQ.Core" ]
                },
                {
                    "Key": "AUTH",
                    "IsDefault": false,
                    "ConfigurationPath": "/config/sessionfactory-AUTH.cfg.xml",
                    "ConnectionStringName": "sql-auth",
                    "FluentlyAssembly": [ "CPQ.Core" ],
                    "HbmAssembly": [ "CPQ.Core" ]
                }
            ]
        }
    },

    "ConnectionStrings": {
        "sql-DomuWave": "Server=eaglefly;Database=DomuWave;User Id=Cashflow;Password=XiBw$2aun.J!2vt;TrustServerCertificate=true",
        "sql-auth": "Server=eaglefly;Database=RistoApp_Auth;User Id=Cashflow;Password=XiBw$2aun.J!2vt;TrustServerCertificate=true"
    }
}
